{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Onetimesecret Desktop",
  "version": "0.1.0",
  "identifier": "com.onetimesecret.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Onetimesecret Desktop",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://onetimesecret.com https://*.onetimesecret.com; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Onetime Secret",
    "copyright": "Copyright (c) 2025 Onetime Secret",
    "category": "Utility",
    "shortDescription": "Secure secret sharing desktop application",
    "longDescription": "A secure, privacy-first desktop application for Onetimesecret. Share sensitive information safely with end-to-end encryption and automatic expiration."
  }
}
