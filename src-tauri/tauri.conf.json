{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OneTimeSecret",
  "version": "0.1.0",
  "identifier": "dev.onetimesecret.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "OneTimeSecret",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' https://onetimesecret.dev",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: https:",
        "font-src": "'self'"
      },
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": true,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Onetime Secret",
    "copyright": "Copyright (c) 2025 Onetime Secret",
    "category": "Utility",
    "shortDescription": "Secure secret sharing",
    "longDescription": "A secure, cross-platform desktop client for OneTimeSecret. Share secrets that expire after being viewed once or after a time limit."
  },
  "plugins": {
    "http": {
      "scope": [
        "https://onetimesecret.dev/**"
      ]
    }
  }
}
